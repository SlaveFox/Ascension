GuildNoGuildPanel < Panel
  anchors.left: parent.left
  anchors.right: parent.right
  anchors.top: parent.top
  anchors.bottom: parent.bottom

  Label
    id: infoLabel
    width: 360
    height: 50
    margin-top: -15
    anchors.top: parent.top
    anchors.horizontalCenter: parent.horizontalCenter
    text: "Você ainda não faz parte de uma guild.\nDeseja criar ou se juntar a uma?"
    text-align: center
    color: white

  UIButton
    id: createButton
    size: 80 24
    anchors.bottom: parent.bottom
    anchors.left: parent.left
    text: "Criar Guild"
    background-color: #444444
    border-width: 1
    border-color: black
    text-align: center
    color: white
    opacity: 0.9
    $hover:
      opacity: 1
    $pressed:
      opacity: 0.7

  UIButton
    id: joinButton
    size: 80 24
    anchors.bottom: parent.bottom
    anchors.right: parent.right
    text: "Join Guild"
    background-color: #444444
    border-width: 1
    border-color: black
    text-align: center
    color: white
    opacity: 0.9
    $hover:
      opacity: 1
    $pressed:
      opacity: 0.7


