          id: creatureBox
          size: 100 100
          anchors.centerIn: parent
          old-scaling: true

      Panel
        id: leftBottom
        height: 110
        anchors.left: parent.left
        anchors.right: parent.right
        anchors.top: leftTop.bottom
        margin: 10 6 6 6

        ProgressBar
          id: upgradeProgress
          height: 14
          anchors.top: parent.top
          anchors.left: parent.left
          anchors.right: parent.right
          background-color: #dbae5c

