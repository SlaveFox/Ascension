  Label
    id: text
    text: 0
    anchors.left: icon.right
    anchors.right: parent.right
    anchors.verticalCenter: parent.verticalCenter
    margin-left: 5
    text-align: left
    color: #CCCCCC
    text-auto-resize: true
  
RingTemplate < UIWidget
  size: 32 32

  UIWidget
    id: fill
    size: 26 26
    anchors.centerIn: parent
    image-source: images/fill
    visible: false

  UIWidget
    id: ringImage
    anchors.fill: parent
    image-source: images/ring

  UIWidget
    id: rank
    size: 20 20
    anchors.centerIn: parent
    image-source: images/bronze

SlotTemplate < UIItem
  size: 35 35
  background-color: #3b2412
  border-width: 1
  border-color-bottom: #898A8C
  border-color-right: #898A8C
  border-color-top: #1e1e1e
  border-color-left: #1e1e1e
