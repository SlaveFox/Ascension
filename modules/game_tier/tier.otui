            id: timeLabel
            anchors.centerIn: parent
            text: 00:00:00
            text-auto-resize: true

        Panel
          id: itemSlots
          height: 35
          anchors.top: upgradeProgress.bottom
          anchors.left: parent.left
          anchors.right: parent.right
          margin-top: 10
          padding-left: 5
          layout:
            type: horizontalBox

        Button
