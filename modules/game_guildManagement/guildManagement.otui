GuildIconChooser < Window
  size: 250 250
  text: "Escolher Emblema"

  UIWidget
    id: iconGrid
    anchors.fill: parent
    margin-left: 10
    margin-top: 10

    layout:
      type: horizontalBox
      cell-size: 40 40
      spacing: 5

Window
  id: guildManagementWindow
  size: 400 460
  text: "Guild Management"
  @onEscape: self:hide()
  anchors.horizontalCenter: parent.horizontalCenter
  anchors.verticalCenter: parent.verticalCenter

  Panel
    id: guildTabsPanel
    anchors.top: parent.top
    anchors.left: parent.left
    anchors.right: parent.right
    margin-left: 15
    height: 30
    layout:
      type: horizontalBox
      spacing: 4

    UIButton
      id: tabMembros
      text: "Membros"
      width: 80
      height: 24
      @onClick: modules.game_guildManagement.onShowTab("membros")
      background-color: #444444
      border-width: 1
      border-color: black
      opacity: 0.9
      $hover:
        opacity: 1
      $pressed:
        opacity: 0.7

    UIButton
      id: tabInformacoes
      text: "Info"
      width: 80
      height: 24
      @onClick: modules.game_guildManagement.onShowTab("informacoes")
      background-color: #444444
      border-width: 1
      border-color: black
      opacity: 0.9
      $hover:
        opacity: 1
      $pressed:
        opacity: 0.7

    UIButton
      id: tabHunted
      text: "Hunted"
      width: 80
      height: 24
      @onClick: modules.game_guildManagement.onShowTab("hunted")
      background-color: #444444
      border-width: 1
      border-color: black
      opacity: 0.9
      $hover:
        opacity: 1
      $pressed:
        opacity: 0.7

    UIButton
      id: tabGuilds
      text: "Guilds"
      width: 80
      height: 24
      @onClick: modules.game_guildManagement.onShowTab("guilds")
      background-color: #444444
      border-width: 1
      border-color: black
      opacity: 0.9
      $hover:
        opacity: 1
      $pressed:
        opacity: 0.7

  Panel
    id: guildScrollContainer
    anchors.top: guildTabsPanel.bottom
    anchors.left: parent.left
    anchors.right: parent.right
    margin-top: 5
    height: 200
    padding: 5
    border-width: 1
    border-color: #444444
    background-color: #121212
    radius: 8

    VerticalScrollBar
      id: guildScrollBar
      step: 18
      anchors.top: parent.top
      anchors.bottom: parent.bottom
      anchors.right: parent.right

    ScrollablePanel
      id: guildScroll
      anchors.top: parent.top
      anchors.bottom: parent.bottom
      anchors.left: parent.left
      anchors.right: guildScrollBar.left
      vertical-scrollbar: guildScrollBar
      layout:
        type: verticalBox
        spacing: 5

  UIButton
    id: closeButton
    text: "Fechar"
    width: 80
    height: 24
    anchors.top: guildScrollContainer.bottom
    anchors.horizontalCenter: parent.horizontalCenter
    margin-top: 5
    @onClick: self:getParent():hide()
    opacity: 0.8
    $hover:
      opacity: 1
    $pressed:
      opacity: 0.7