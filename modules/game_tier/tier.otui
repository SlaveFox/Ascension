  UILabel
    id: qty
    anchors.right: parent.right
    anchors.bottom: parent.bottom
    margin-right: 2
    margin-bottom: 1
    color: #FFFFFF
    text: ""
    font: verdana-11px-monochrome
    text-auto-resize: true


Window
  id: tierWindow
  size: 450 400
  border-width: 2
  border-color: #dbae5c
  anchors.horizontalCenter: parent.horizontalCenter
  anchors.verticalCenter: parent.verticalCenter
  @onEscape: modules.game_tier.closeTierWindow()

  Label
    id: titleLabel
    text: Tier System
    anchors.top: parent.top
    anchors.left: parent.left
    margin-left: 25
    font: baby-20
    color: #dbae5c
    text-auto-resize: true

  GoldValueTemplateTier
    id: goldValue
    anchors.top: parent.top
    anchors.right: premiumValue.left
    margin-right: 5

  PremiumValueTemplateTier
    id: premiumValue
    anchors.top: parent.top
    anchors.right: parent.right
    margin-right: 5

