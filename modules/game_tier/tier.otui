    anchors.right: parent.right
    anchors.bottom: parent.bottom
    margin-top: 8
    margin-left: 5
    margin-right: 5
    margin-bottom: 5

    Panel
      id: leftBigPanel
      width: 180
      anchors.top: parent.top
      anchors.left: parent.left
      anchors.bottom: parent.bottom
      image-source: /images/ui/window_headless
      border-width: 1
      border-color-top: #898A8C 
      border-color-left: #898A8C
      border-color-bottom: #1e1e1e 
      border-color-right: #1e1e1e 

      Panel
        id: leftTop
        background-color: #3b2412
        border-width: 1
        border-color-bottom: #898A8C 
        border-color-right: #898A8C
        border-color-top: #1e1e1e 
        border-color-left: #1e1e1e 
        size: 160 110
        anchors.horizontalCenter: parent.horizontalCenter
        anchors.verticalCenter: parent.verticalCenter
        margin-bottom: 55

